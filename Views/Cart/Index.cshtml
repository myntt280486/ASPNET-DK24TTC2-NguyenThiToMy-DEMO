@model List<CartItemViewModel>

@{
    ViewData["Title"] = "Giỏ hàng";
    var total = Model.Sum(item => item.Total);
}

<h2 class="mb-4" style="color: #6f4e37;">
    <i class="fas fa-shopping-cart"></i> Giỏ hàng của bạn
</h2>

@if (Model.Any())
{
    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    @foreach (var item in Model)
                    {
                        <div class="row mb-3 pb-3 border-bottom">
                            <div class="col-md-2">
                                <img src="@(item.ImageUrl ?? "/images/products/default-coffee.jpg")" class="img-fluid rounded" alt="@item.ProductName">
                            </div>
                            <div class="col-md-4">
                                <h6>@item.ProductName</h6>
                                @if (!string.IsNullOrEmpty(item.SelectedOptions))
                                {
                                    <small class="text-muted">@item.SelectedOptions</small>
                                }
                            </div>
                            <div class="col-md-2">
                                <p class="mb-0 fw-bold" style="color: #6f4e37;">@item.Price.ToString("N0")đ</p>
                            </div>
                            <div class="col-md-2">
                                <form asp-action="UpdateQuantity" method="post" class="d-inline">
                                    <input type="hidden" name="productId" value="@item.ProductId" />
                                    <input type="hidden" name="selectedOptions" value="@item.SelectedOptions" />
                                    <input type="number" name="quantity" value="@item.Quantity" min="1" max="99" class="form-control form-control-sm" onchange="this.form.submit()" />
                                </form>
                            </div>
                            <div class="col-md-2 text-end">
                                <p class="mb-2 fw-bold">@item.Total.ToString("N0")đ</p>
                                <form asp-action="RemoveFromCart" method="post" class="d-inline">
                                    <input type="hidden" name="productId" value="@item.ProductId" />
                                    <input type="hidden" name="selectedOptions" value="@item.SelectedOptions" />
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    }
                </div>
            </div>
            
            <div class="mt-3">
                <a asp-controller="Products" asp-action="Index" class="btn btn-outline-primary">
                    <i class="fas fa-arrow-left"></i> Tiếp tục mua sắm
                </a>
                <form asp-action="Clear" method="post" class="d-inline">
                    <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Bạn có chắc muốn xóa toàn bộ giỏ hàng?')">
                        <i class="fas fa-trash-alt"></i> Xóa giỏ hàng
                    </button>
                </form>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-header" style="background-color: #6f4e37; color: white;">
                    <h5 class="mb-0"><i class="fas fa-receipt"></i> Tổng đơn hàng</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <span>Tạm tính:</span>
                        <span class="fw-bold">@total.ToString("N0")đ</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Phí vận chuyển:</span>
                        <span class="text-success">Miễn phí</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between mb-3">
                        <span class="h5">Tổng cộng:</span>
                        <span class="h5 text-danger">@total.ToString("N0")đ</span>
                    </div>
                    
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <div class="d-grid">
                            <a asp-controller="Orders" asp-action="Checkout" class="btn btn-primary btn-lg">
                                <i class="fas fa-credit-card"></i> Thanh toán
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning mb-0">
                            <i class="fas fa-exclamation-triangle"></i> Vui lòng <a asp-controller="Account" asp-action="Login" class="alert-link">đăng nhập</a> để thanh toán
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="text-center py-5">
        <i class="fas fa-shopping-cart" style="font-size: 5rem; color: #ddd;"></i>
        <h4 class="mt-3 text-muted">Giỏ hàng trống</h4>
        <p class="text-muted">Hãy thêm sản phẩm vào giỏ hàng để tiếp tục mua sắm</p>
        <a asp-controller="Products" asp-action="Index" class="btn btn-primary">
            <i class="fas fa-shopping-bag"></i> Mua sắm ngay
        </a>
    </div>
}
