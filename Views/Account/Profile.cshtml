@model ApplicationUser

@{
    ViewData["Title"] = "Thông tin cá nhân";
}

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card shadow-sm">
            <div class="card-header" style="background-color: #6f4e37; color: white;">
                <h4 class="mb-0"><i class="fas fa-user-circle"></i> Thông tin cá nhân</h4>
            </div>
            <div class="card-body p-4">
                <div class="row mb-3">
                    <div class="col-md-4 fw-bold">
                        <i class="fas fa-user"></i> Họ và tên:
                    </div>
                    <div class="col-md-8">
                        @Model.FullName
                    </div>
                </div>
                
                <div class="row mb-3">
                    <div class="col-md-4 fw-bold">
                        <i class="fas fa-envelope"></i> Email:
                    </div>
                    <div class="col-md-8">
                        @Model.Email
                    </div>
                </div>
                
                <div class="row mb-3">
                    <div class="col-md-4 fw-bold">
                        <i class="fas fa-phone"></i> Số điện thoại:
                    </div>
                    <div class="col-md-8">
                        @Model.PhoneNumber
                    </div>
                </div>
                
                <div class="row mb-3">
                    <div class="col-md-4 fw-bold">
                        <i class="fas fa-map-marker-alt"></i> Địa chỉ:
                    </div>
                    <div class="col-md-8">
                        @(Model.Address ?? "Chưa cập nhật")
                    </div>
                </div>
                
                <hr>
                
                <div class="text-center">
                    <a asp-controller="Orders" asp-action="Index" class="btn btn-primary">
                        <i class="fas fa-receipt"></i> Xem đơn hàng
                    </a>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-home"></i> Về trang chủ
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
