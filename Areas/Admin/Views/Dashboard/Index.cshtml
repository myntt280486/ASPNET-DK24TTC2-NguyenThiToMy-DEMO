@model IEnumerable<Order>

@{
    ViewData["Title"] = "Dashboard";
}

<div class="row mb-4">
    <div class="col-md-3 mb-3">
        <div class="stats-card text-center">
            <div class="icon text-primary">
                <i class="fas fa-mug-hot"></i>
            </div>
            <h3>@ViewBag.TotalProducts</h3>
            <p class="text-muted mb-0">Sản phẩm</p>
        </div>
    </div>
    
    <div class="col-md-3 mb-3">
        <div class="stats-card text-center">
            <div class="icon text-success">
                <i class="fas fa-receipt"></i>
            </div>
            <h3>@ViewBag.TotalOrders</h3>
            <p class="text-muted mb-0">Đơn hàng</p>
        </div>
    </div>
    
    <div class="col-md-3 mb-3">
        <div class="stats-card text-center">
            <div class="icon text-info">
                <i class="fas fa-users"></i>
            </div>
            <h3>@ViewBag.TotalUsers</h3>
            <p class="text-muted mb-0">Người dùng</p>
        </div>
    </div>
    
    <div class="col-md-3 mb-3">
        <div class="stats-card text-center">
            <div class="icon text-warning">
                <i class="fas fa-dollar-sign"></i>
            </div>
            <h3>@ViewBag.TotalRevenue.ToString("N0")đ</h3>
            <p class="text-muted mb-0">Doanh thu</p>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="fas fa-clock"></i> Đơn hàng chờ xử lý</h5>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle"></i> Có <strong>@ViewBag.PendingOrders</strong> đơn hàng đang chờ xử lý
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fas fa-list"></i> Đơn hàng gần đây</h5>
                <a asp-controller="Orders" asp-action="Index" class="btn btn-sm btn-light">
                    Xem tất cả <i class="fas fa-arrow-right"></i>
                </a>
            </div>
            <div class="card-body">
                @if (Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Mã đơn</th>
                                    <th>Khách hàng</th>
                                    <th>Ngày đặt</th>
                                    <th>Tổng tiền</th>
                                    <th>Trạng thái</th>
                                    <th>Hành động</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model)
                                {
                                    <tr>
                                        <td><strong>#@order.Id</strong></td>
                                        <td>@order.User.FullName</td>
                                        <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td class="fw-bold text-success">@order.TotalAmount.ToString("N0")đ</td>
                                        <td>
                                            @switch (order.Status)
                                            {
                                                case OrderStatus.Pending:
                                                    <span class="badge bg-warning text-dark">Chờ xác nhận</span>
                                                    break;
                                                case OrderStatus.Processing:
                                                    <span class="badge bg-info">Đang xử lý</span>
                                                    break;
                                                case OrderStatus.Shipping:
                                                    <span class="badge bg-primary">Đang giao</span>
                                                    break;
                                                case OrderStatus.Completed:
                                                    <span class="badge bg-success">Hoàn thành</span>
                                                    break;
                                                case OrderStatus.Cancelled:
                                                    <span class="badge bg-danger">Đã hủy</span>
                                                    break;
                                            }
                                        </td>
                                        <td>
                                            <a asp-controller="Orders" asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-primary">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted text-center py-4">Chưa có đơn hàng nào</p>
                }
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="fas fa-tasks"></i> Thao tác nhanh</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-controller="Products" asp-action="Create" class="btn btn-outline-primary">
                        <i class="fas fa-plus"></i> Thêm sản phẩm mới
                    </a>
                    <a asp-controller="Categories" asp-action="Create" class="btn btn-outline-success">
                        <i class="fas fa-plus"></i> Thêm danh mục mới
                    </a>
                    <a asp-controller="Orders" asp-action="Index" asp-route-status="@OrderStatus.Pending" class="btn btn-outline-warning">
                        <i class="fas fa-clock"></i> Xem đơn chờ xử lý
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="fas fa-info-circle"></i> Thông tin hệ thống</h5>
            </div>
            <div class="card-body">
                <p><i class="fas fa-check-circle text-success"></i> Hệ thống hoạt động bình thường</p>
                <p><i class="fas fa-database text-info"></i> Database: Connected</p>
                <p><i class="fas fa-calendar text-primary"></i> Hôm nay: @DateTime.Now.ToString("dd/MM/yyyy")</p>
                <p class="mb-0"><i class="fas fa-user-shield text-warning"></i> Đăng nhập: @User.Identity?.Name</p>
            </div>
        </div>
    </div>
</div>
