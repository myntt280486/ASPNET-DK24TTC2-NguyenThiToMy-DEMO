@model IEnumerable<Product>

@{
    ViewData["Title"] = "Sản phẩm";
}

<h2 class="mb-4" style="color: #6f4e37;">
    <i class="fas fa-mug-hot"></i> Danh sách sản phẩm
</h2>

<div class="row">
    <div class="col-md-3">
        <div class="card shadow-sm mb-4">
            <div class="card-header" style="background-color: #6f4e37; color: white;">
                <h5 class="mb-0"><i class="fas fa-filter"></i> Lọc sản phẩm</h5>
            </div>
            <div class="card-body">
                <form method="get">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Tìm kiếm</label>
                        <input type="text" name="searchString" class="form-control" value="@ViewBag.SearchString" placeholder="Tên sản phẩm..." />
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label fw-bold">Danh mục</label>
                        <select name="categoryId" class="form-select">
                            <option value="">Tất cả danh mục</option>
                            @if (ViewBag.Categories != null)
                            {
                                @foreach (var cat in ViewBag.Categories)
                                {
                                    <option value="@cat.Id" selected="@(cat.Id == ViewBag.CurrentCategory)">@cat.Name</option>
                                }
                            }
                        </select>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label fw-bold">Khoảng giá</label>
                        <div class="row g-2">
                            <div class="col-6">
                                <input type="number" name="minPrice" class="form-control" placeholder="Từ" />
                            </div>
                            <div class="col-6">
                                <input type="number" name="maxPrice" class="form-control" placeholder="Đến" />
                            </div>
                        </div>
                    </div>
                    
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search"></i> Lọc
                    </button>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-md-9">
        @if (Model.Any())
        {
            <div class="row">
                @foreach (var product in Model)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card h-100 shadow-sm product-card">
                            <img src="@(product.ImageUrl ?? "/images/products/default-coffee.jpg")" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover;">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">@product.Name</h5>
                                <p class="card-text text-muted small flex-grow-1">@product.Description</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="h5 mb-0" style="color: #6f4e37;">@product.Price.ToString("N0")đ</span>
                                    <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-primary btn-sm">
                                        <i class="fas fa-eye"></i> Chi tiết
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i> Không tìm thấy sản phẩm nào.
            </div>
        }
    </div>
</div>

<style>
    .product-card {
        transition: transform 0.3s, box-shadow 0.3s;
    }
    
    .product-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.15) !important;
    }
</style>
