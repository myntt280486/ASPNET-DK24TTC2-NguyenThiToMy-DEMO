@model Product

@{
    ViewData["Title"] = "Xóa sản phẩm";
}

<h2 class="text-danger mb-4"><i class="fas fa-exclamation-triangle"></i> Xóa sản phẩm</h2>

<div class="alert alert-danger">
    <h5><i class="fas fa-warning"></i> Cảnh báo!</h5>
    <p class="mb-0">Bạn có chắc chắn muốn xóa sản phẩm này? Hành động này không thể hoàn tác!</p>
</div>

<div class="card">
    <div class="card-header bg-danger text-white">
        <h5 class="mb-0">Thông tin sản phẩm sẽ bị xóa</h5>
    </div>
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-md-4">
                <img src="@(Model.ImageUrl ?? "/images/products/default-coffee.jpg")" 
                     alt="@Model.Name" 
                     class="img-fluid rounded"
                     style="max-height: 200px;">
            </div>
            <div class="col-md-8">
                <dl class="row">
                    <dt class="col-sm-4">ID:</dt>
                    <dd class="col-sm-8">@Model.Id</dd>
                    
                    <dt class="col-sm-4">Tên sản phẩm:</dt>
                    <dd class="col-sm-8">@Model.Name</dd>
                    
                    <dt class="col-sm-4">Danh mục:</dt>
                    <dd class="col-sm-8">@Model.Category.Name</dd>
                    
                    <dt class="col-sm-4">Giá:</dt>
                    <dd class="col-sm-8">@Model.Price.ToString("N0")đ</dd>
                    
                    <dt class="col-sm-4">Mô tả:</dt>
                    <dd class="col-sm-8">@(Model.Description ?? "Không có")</dd>
                    
                    <dt class="col-sm-4">Trạng thái:</dt>
                    <dd class="col-sm-8">
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">Đang bán</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Ngừng bán</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>
        
        <hr>
        
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Xác nhận xóa
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Hủy
                </a>
            </div>
        </form>
    </div>
</div>
